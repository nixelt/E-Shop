@model E_Shop.ViewModels.SettingsViewModels.SendCodeViewModel
@{
    ViewBag.Title = "Отправка кода";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("SendCode", "Account", new { Model.ReturnUrl }, FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.Hidden("rememberMe", Model.RememberMe)
    <div class="row">
        <div class="col-md-8">
            Выберите способ подтверждения:
            @Html.DropDownListFor(model => model.SelectedProvider, Model.Providers,new{@class="form-control"})
            <input type="submit" value="Отправить" class="btn btn-primary my-1"/>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}