@model E_Shop.ViewModels.PagerViewModel.PagerViewModel<E_Shop.Areas.Admin.ViewModels.SupplierViewModels.SupplierViewModel>

    @{
        ViewBag.Title = "Поставщики";
        Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    }

    <div class="d-flex justify-content-between align-items-center my-3">
        <h2>@ViewBag.Title</h2>
        @Html.ActionLink("Добавить", "Create", null, new { @class = "btn btn-primary" })
    </div>

    @using (Ajax.BeginForm("GetSuppliers", new AjaxOptions { UpdateTargetId = "suppliers" }))
    {
        <div class="form-check col col-sm-6">
            <label class="form-check-label">
                <input class="form-check-input" name="includeDeleted" type="checkbox" id="AjaxChangeSubmit" value="true" />
                Показать удаленных
            </label>
        </div>

        <div id="suppliers">
            @Html.Partial("_Suppliers", Model)
        </div>
    }

    @section scripts
{
        <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    }