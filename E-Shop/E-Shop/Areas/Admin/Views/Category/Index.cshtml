@model IEnumerable<E_Shop.Areas.Admin.ViewModels.CategoryViewModels.CategoryViewModel>

@{
    ViewBag.Title = "Категории";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between align-items-center my-3">
    <h2>@ViewBag.Title</h2>
    @Html.ActionLink("Добавить новую", "Create", null, new { @class = "btn btn-primary" })
</div>

<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th class="text-right">
            Действие
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td class="text-right">
                @Html.ActionLink("Редактировать", "Edit", new { id = item.CategoryId }, new { @class = "btn btn-primary" })
                @Html.ActionLink("Атрибуты", "Index", "Attribute", new {  categoryId = item.CategoryId }, new { @class = "btn btn-info" })
            </td>
        </tr>
    }

</table>
