@using E_Shop.Helpers
@model E_Shop.ViewModels.PagerViewModel.PagerViewModel<E_Shop.Areas.Admin.ViewModels.OrderViewModels.OrderViewModel>

<table class="table table-hover">
    <tr>
        <th>
            №
        </th>
        <th>
            @Html.DisplayNameFor(modelItem => modelItem.Entities[0].FullName)
        </th>
        <th>
            @Html.DisplayNameFor(modelItem => modelItem.Entities[0].Phone)
        </th>
        <th>
            @Html.DisplayNameFor(modelItem => modelItem.Entities[0].OrderStatus)
        </th>
        <th>
            @Html.DisplayNameFor(modelItem => modelItem.Entities[0].OrderDate)
        </th>
        <th class="text-right">Действие</th>
    </tr>

    @foreach (var item in Model.Entities)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OrderId)
            </td>
            <td>
                @Html.ActionLink(item.FullName, "Details", "Customer", new { id = item.CustomerId }, null)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderStatus.Name)
            </td>
            <td>
                @item.OrderDate.ToString("dd.MM.yyyy HH:mm")
            </td>
            <td class="text-right">
                @Html.ActionLink("Подробности", "Details", "Order", new { id = @item.OrderId }, new { @class = "btn btn-info" })
            </td>
        </tr>
    }

</table>

@Html.PaginationAjax(Model.Pager)