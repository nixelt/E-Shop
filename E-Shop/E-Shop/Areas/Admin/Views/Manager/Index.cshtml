@model E_Shop.ViewModels.PagerViewModel.PagerViewModel<E_Shop.Areas.Admin.ViewModels.UserViewModels.UserViewModel>

@{
    ViewBag.Title = "Менеджеры";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between align-items-center my-3">
    <h2>@ViewBag.Title</h2>
    @Html.ActionLink("Добавить", "Add", null, new { @class = "btn btn-primary" })
</div>

<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Entities[0].FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Entities[0].PhoneNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Entities[0].Email)
        </th>
        <th class="text-right">Действие</th>
    </tr>

    @foreach (var item in Model.Entities)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td class="text-right">
                @Html.ActionLink("Подробности", "Details", new { id = item.Id }, new { @class = "btn btn-info" })
            </td>
        </tr>
    }
</table>
